<h2>Your Favs</h2>
<div class="well">
  <% favorites.each(function(fav) { %>
    <span class="alert alert-info"><%= fav.attr('name') %> (<strong><%= fav.votes() %></strong>)</span>
  <% }) %>
</div>

<table class="table table-bordered">
  <thead>
    <th></th>
    <th></th>
    <th>Name</th>
    <th>Ship</th>
    <th></th>
  </thead>
  <tbody>
  <% commanders.each(function(commander) { %>
  <tr <%= commander %>>
    <td class="vote">
      <span class="<%= commander.votes() > 0 ? 'green' : 'red' %> toggle"><%= commander.votes() %></span>
      <div class="toggle" style="display: none;">
        <span class="green"><%= commander.attr('upvotes') %></span><br />
        <span class="red"><%= commander.attr('downvotes') %></span>
      </div>
    </td>
    <td class="photo">
      <a href="javascript://" class="up"></a>
      <a href="javascript://" class="down"></a>
      <img src="/images/<%= commander.attr('photo') %>"/>
    </td>
    <td><%= commander.attr('name') %></td>
    <td><%= commander.attr('ship') %></td>
    <td class="actions">
      <img src="images/bookmark.png" class="favorite" />
      <img src="images/delete.png" class="delete" />
    </td>
  </tr>
  <% }) %>
  </tbody>
</table>